{
    "endpoints": {
      "name": "my-agent-endpoint",
      "description": "Example Agent Endpoint with a Traffic Policy",
      "upstream": {
        "url": 80
      },
      "traffic_policy": {
        "on_http_request": {
          "actions": {
            "type": "custom-response",
            "config": {
              "status_code": 200,
              "content": "Hello, World!"
            }
          }
        }
      }
    }
  }